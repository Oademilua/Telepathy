<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.oademilua.telepathy" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Telepathy</name>
    <description>
        A simple random number guessing game mobile app
    </description>
    <author email="hh342413@gmail.com" href="https://oademilua.github.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="3.7.0" />
    <!--<preference name="orientation" value="landscape" />-->
    <plugin name="org.apache.cordova.inappbrowser" />
    <allow-navigation href="https://*/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="../../img/logo.jpg" width="180" height="180" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
